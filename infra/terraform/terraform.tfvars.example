# =========================
# Mem0 Deployment Lab
# Terraform Overrides
# =========================

# Naming / tagging
project_name = "mem0-deployment-lab"
owner        = "student"

# AWS
aws_region = "us-east-1"

# EC2
instance_type         = "t3.small"       # lab default (cheaper). If builds fail or are too slow, use t3.medium.
root_volume_size_gb   = 20              # lab default. Recommended: 30+ GB for longer-lived/prod usage.
ssh_key_name          = ""              # REQUIRED for class: set to your existing EC2 key pair name.
allowed_ssh_cidr      = "0.0.0.0/0"     # change to YOUR_IP/32 for safety
expose_qdrant_public  = false           # keep false for labs unless you need it

# Repo bootstrapping
repo_url  = "https://github.com/tsmith4014/mem0_deployment_lab.git"
repo_ref  = "main"                       # branch/tag/sha

# App
api_port = 8000

# Bootstrap/container knobs (advanced; defaults are fine for most students)
api_host             = "0.0.0.0"
docker_network_name  = "mem0_network"
api_container_name   = "mem0_api"
api_image_name       = "mem0_api:latest"
qdrant_container_name = "mem0_qdrant"
qdrant_image          = "qdrant/qdrant:latest"
qdrant_volume_name    = "qdrant_data"
qdrant_http_port      = 6333
qdrant_grpc_port      = 6334

# AI provider mode
# - "openai": use OpenAI for embeddings + LLM
# - "aws":    use AWS Bedrock (Titan embeddings + Bedrock LLM)
ai_mode = "aws"

# OpenAI (only required if ai_mode = "openai")
openai_api_key = ""
openai_base_url = ""                    # optional

# AWS Bedrock (used if ai_mode = "aws")
aws_region_runtime = "us-east-1"         # Bedrock runtime region (can differ, but usually same as aws_region)
embedder_model     = "amazon.titan-embed-text-v1"
llm_model          = "anthropic.claude-3-5-sonnet-20240620-v1:0"

# API keys for this service (recommended: let Terraform generate; leave blank)
api_key       = ""                       # leave blank to auto-generate
admin_api_key = ""                       # leave blank to default to api_key


